{
    "source": ["./data/**/*.json"],
    "platforms": {
        "javascript": {
            "transformGroup": "js",
            "buildPath": "./build/js/",
            "files": [
                {
                    "destination": "_variable.js",
                    "format": "javascript/es6"
                }
            ]
        },
        "css": {
            "transformGroup": "css",
            "buildPath": "./build/css/",
            "files": [
                {
                    "format": "css/variables",
                    "destination": "_variable.css"
                }
            ]
        }
    }
}
