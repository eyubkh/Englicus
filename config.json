{
  "source": ["tokens/data/**/*.json"],
  "platforms": {
    "javascript": {
      "transformGroup": "js",
      "buildPath": "tokens/build/js/",
      "files": [
        {
          "destination": "_variables.js",
          "format": "javascript/es6"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "tokens/build/css/",
      "files": [
        {
          "format": "css/variables",
          "destination": "_variables.css"
        }
      ]
    }
  }
}
